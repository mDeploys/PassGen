{
  "name": "passgen",
  "version": "1.0.5",
  "description": "A secure password generator desktop application",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/sync-icons.js && electron-builder",
    "preview": "vite preview",
    "electron:dev": "tsc && concurrently \"vite --port 5173 --strictPort\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "tsc && vite build && node scripts/sync-icons.js && electron-builder",
    "gen:activation": "node scripts/generate-activation.js",
    "dashboard": "node dashboard-server.js"
  },
  "keywords": [
    "password",
    "generator",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.925.0",
    "@peculiar/x509": "^1.14.2",
    "@supabase/supabase-js": "^2.89.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "express": "^5.2.1",
    "googleapis": "^164.1.0",
    "keypair": "^1.0.4",
    "nodemailer": "^7.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^3.5.0"
  },
  "build": {
    "appId": "com.passgen.app",
    "productName": "PassGen",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "PassGen",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "license": "LICENSE.txt"
    },
    "mac": {
      "icon": "public/icon.png",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "public/icon.png",
      "target": [
        "AppImage"
      ]
    }
  }
}
